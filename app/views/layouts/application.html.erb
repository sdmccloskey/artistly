            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                        <li>
                            <%= link_to "About Us", welcome_about_path %>
                        </li>    
                            
                        <% if seller_signed_in? %>
                                <li>
                                    <%= link_to "View Artwork",artworks_path %>
                                </li>
                                <li>
                                    <%= link_to('Logout',  destroy_seller_session_path, method: :delete) %>        
                                 </li>
                            <% else %>
                                <li>
                                <%= link_to('Login/SignUp to View Artwork', new_seller_session_path)  %>  
                                </li>
                                
                        <% end %>
                    

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>




<%= yield %>

