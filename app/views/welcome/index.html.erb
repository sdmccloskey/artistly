<body>

    <!-- Navigation -->









    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="img-responsive fill" width="100%"><%= image_tag("welcomePage/potteryPieces.jpg") %></div>
                <div class="carousel-caption">
                    <h2 class="caro-text">Find works, Sell works, Love works!</h2>
                </div>
            </div>
            <div class="item">
                <div class="img-responsive fill" width="100%"><%= image_tag("welcomePage/sunflower-florin-coman.jpg") %></div>
                <div class="carousel-caption">
                    <h2 class="caro-text">See how other artists around you are enjoying the world too!</h2>
                </div>
            </div>
            <div class="item">
                <div class="img-responsive fill" width="100%"><%= image_tag("welcomePage/artPainter.png") %></div>
                <div class="carousel-caption">
                    <h2 class="caro-text">Enjoy! Even if your passion is painting, drawing, photographing, or pottery!</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>

