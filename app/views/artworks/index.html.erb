<head>
  <title>Artistly | Listing Artworks</title>
</head>

<p id="notice"><%= notice %></p>

<h1 class="artwork_title">Listing Artworks</h1>

<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Art</th>
        <th>Title</th>
        <th>Artist</th>
        <th>Price</th>
        
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artworks.each do |artwork| %>
        <tr>
          <td><%= artwork.art %></td>
          <td><%= artwork.title %></td>
          <td><%= artwork.artist %></td>
          <td><%= artwork.price %></td>
         
          <td><%= artwork.description %></td>
          <td><%= link_to 'Show', artwork %></td>
          <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
          <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


<center><%= link_to 'Add your Art to the world', new_artwork_path, class: "btn btn-info" %></center>
<hr>




