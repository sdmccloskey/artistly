<div class="container">
  <div class="table-responsive">
    <table class="table hover">
      <thead>

        <p><strong>Picture:</strong><%= @seller.picture %></p>
        <p><strong>About:</strong><%= @seller.about %></p>
        <%= link_to 'Edit', edit_seller_path(@seller) %> |
        <%= link_to 'Back', sellers_path %>
        <br>
      </thead>
        
      <tbody>
        <thead>
        <% @artworks.each do |artwork| %>
          <tr>
            <th>Art</th>
            <th>Title</th>
            <th>Artist</th>
            <th>Price</th>
            
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      </tbody>

      <tbody>
        <% @artworks.each do |artwork| %>
          <tr>
            <td><%= artwork.art %></td>
            <td><%= artwork.title %></td>
            <td><%= artwork.artist %></td>
            <td><%= artwork.price %></td>
           
            <td><%= artwork.description %></td>
            <td><%= link_to 'Show', artwork %></td>
            <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
            <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <div class="container">
    <center><%= link_to 'Add Artwork', new_artwork_path, class: "btn btn-info" %></center>
  </div>
</div> <!-- END OF PAGE CONTAINER -->

